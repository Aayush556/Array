// Insert the element at the end of array.

#include <iostream>

using namespace std;

int main()
{
  int n;
  int count;
  int end;
  
  cout << "Enter the size of array you want ";                  // creating the array of user's size
    cin>>n;
  int array[n];
  

for(int i = 0; i < n-1; i++)                                     // adding elements to the array
{
  cout<< "Enter a number: ";
  cin  >> array[i];
}

cout << "ELemets in your array are " <<endl;                     // displaying the elemets in the array 
for(int i = 0; i < n-1; i++)
{
    
    cout << array[i] << endl;
}

cout<< "Enter the elememt you want to add at the end of array";  // enter the element at the end position of the array
cin>>end;
array[n-1]=end;
cout << "ELemets in your array are " <<endl;
for(int i = 0; i < n; i++)                                      // displaying the elements of array
{
    
    cout << array[i] << endl;
}



    return 0;
}
